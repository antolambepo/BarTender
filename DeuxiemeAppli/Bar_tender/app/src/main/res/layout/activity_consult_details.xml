<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:alignmentMode="alignBounds"
    tools:context="merliniserentant.bar_tender.consult_details">

    <ImageView

        android:layout_height="300dp"
        android:id="@+id/consult_details_picture"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_above="@+id/show_details_name_ll"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/consult_details_picture"
        android:id="@+id/show_details_name_ll"
        >

        <TextView
            android:id="@+id/consult_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_details_name_ll"
        android:id="@+id/show_details_description_ll">

        <TextView
            android:id="@+id/consult_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/detailsDescription"
        android:text="@string/consult_details_description_title"
        style="@style/show_details_title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nomBoisson"
        android:text="@string/consult_details_name_title"
        style="@style/show_details_title"
        android:layout_above="@+id/detailsDescription"
        android:layout_below="@id/show_details_description_ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
